#include <stdio.h>

 int main(){

    float n1,n2,n3,n4,avf,media;

    
    scanf("%f",&n1);
    scanf("%f",&n2);
    scanf("%f",&n3);
    scanf("%f",&n4);

    media = ((n1 * 2) + (n2 * 3) + (n3 * 4) + n4) / 10;

    printf("Media : %.2f .\n",media);

    if(media >= 7){
        printf("aprovado com media : %.2f",media);
    }{

        if(media >= 5){

                      
            scanf("%f",&avf);

            media = (media + avf) / 2;

            if(media >= 7){

                printf("Aprovado com a media : %.2f .\n",media);
            }{

                printf("Aluno Reprovado.\n");
            }

        }else{

            printf("Aluno Reprovado.\n");
        }
    }


    return(0);
 }

