#include <stdio.h>
int main(){
  
    float n1,n2,n3,n4,av1,media, avf;

    scanf("%f",&n1);
    scanf("%f",&n2);
    scanf("%f",&n3);
    scanf("%f",&n4);
    
    
    media = (n1 * 2 + n2 * 3 + n3 * 4 + n4) / 10;
    

    printf("Media: %.1f\n", media);
    
    if (media >= 7.0){
        printf("Aluno aprovado.\n");
    }
    if (media <= 5.0){
        printf("Aluno reprovado.\n");
    }
    
    if((5 <= media) && (media < 7)){
        printf("Aluno em exame.%.1f\n")
    }
       return 0;
}
